.PHONY: run-client run-server
.PHONY: clean-client clean-server

###############################################################################
###############################################################################

build: \
	build-client build-server
build-client:
	$(MAKE) -C client build
build-server:
	$(MAKE) -C server build

###############################################################################
###############################################################################

run-client:
	$(MAKE) -C client run-$(filter-out $@,$(MAKECMDGOALS))
run-server:
	$(MAKE) -C server run-$(filter-out $@,$(MAKECMDGOALS))

###############################################################################
###############################################################################

clean: \
	clean-client clean-server
clean-client:
	$(MAKE) -C client clean
clean-server:
	$(MAKE) -C server clean

###############################################################################
###############################################################################

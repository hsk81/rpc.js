.PHONY: run-js
.PHONY: clean-js

###############################################################################
###############################################################################

build: \
	build-js
build-js:
	cd js && npm install

###############################################################################
###############################################################################

run: \
	run-js
run-js:
	cd js && ./bin/rpc-client $(filter-out $@,$(MAKECMDGOALS))

###############################################################################
###############################################################################

clean: \
	clean-js
clean-js:
	rm js/node_modules -rf

###############################################################################
###############################################################################
